{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "IBody": {
            "additionalProperties": false,
            "properties": {
                "complete": {
                    "description": "A boolean indicating whether the Todo has been completed or not",
                    "type": "boolean"
                },
                "description": {
                    "description": "The description of the Todo entry",
                    "type": "string"
                }
            },
            "required": [
                "complete",
                "description"
            ],
            "type": "object"
        },
        "IHeaders": {
            "properties": {
                "Content-Type": {
                    "description": "Ensure the content-type is application/json",
                    "enum": [
                        "application/json"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "Content-Type"
            ],
            "type": "object"
        }
    },
    "description": "Schema for POST request event",
    "properties": {
        "body": {
            "$ref": "#/definitions/IBody",
            "description": "The body of the event"
        },
        "headers": {
            "$ref": "#/definitions/IHeaders",
            "description": "The required event headers"
        }
    },
    "required": [
        "body",
        "headers"
    ],
    "type": "object"
}
